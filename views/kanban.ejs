<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>>Kanban Board</title>
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
    <h1>
        <%= tasksNotStarted.title %>
    </h1>
    <div class="kanban">
        <!-- Column not started tasks -->
        <div class="kanban__column" id="kanban__column__not__started">
            <div class="kanban__column-title">Not Started</div>
            <div class="kanban__column-item">
                <div class="kanban__dropzone"></div>
                <% for(let i=0 ; i<2 ; i++) { %>
                    <div class="kanban__item" draggable="true" data-id="1902">
                        <div class="kanban__item-input" contenteditable="">item not started 1</div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% } %>
            </div>
            <button class="kanban__add-item" type="button">+ Add</button>
        </div>
        <!-- Column in progress tasks -->
        <div class="kanban__column" id="kanban__column__in__progress">
            <div class="kanban__column-title">In Progress</div>
            <div class="kanban__column-item">
                <div class="kanban__dropzone"></div>
                <% for(let i=0 ; i<2 ; i++) { %>
                    <div class="kanban__item" draggable="true" data-id="1902">
                        <div class="kanban__item-input" contenteditable="">item in progress 1</div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% } %>
            </div>
            <button class="kanban__add-item" type="button">+ Add</button>
        </div>
        <!-- Column completed tasks -->
        <div class="kanban__column" id="kanban__column__completed">
            <div class="kanban__column-title">Completed</div>
            <div class="kanban__column-item">
                <div class="kanban__dropzone"></div>
                <% for(let i=0 ; i<2 ; i++) { %>
                    <div class="kanban__item" draggable="true" data-id="1902">
                        <div class="kanban__item-input" contenteditable="">item completed 1</div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% } %>
            </div>
            <button class="kanban__add-item" type="button">+ Add</button>
        </div>
        <!-- Column on hold tasks -->
        <div class="kanban__column" id="kanban__column__on__hold">
            <div class="kanban__column-title">On Hold</div>
            <div class="kanban__column-item">
                <div class="kanban__dropzone"></div>
                <% for(let i=0 ; i<2 ; i++) { %>
                    <div class="kanban__item" draggable="true" data-id="1902">
                        <div class="kanban__item-input" contenteditable="">item on hold</div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% } %>
            </div>
            <button class="kanban__add-item" type="button">+ Add</button>
        </div>
    </div>
    <script src="js/main.js" type="module"></script>
</body>
</html>