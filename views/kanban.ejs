<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>>Kanban Board</title>
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
    <h1>
        From controller : <%= controllerWorks %>
    </h1>
    <h2>
        From JS : 
    </h2>
    <div class="kanban">
        <!-- Column not started tasks -->
        <div class="kanban__column" id="kanban__column__not__started">
            <div class="kanban__column-title">Not Started</div>
            <div class="kanban__column-items">
                <div class="kanban__dropzone"></div>
                <% tasksNotStarted.forEach(t => { %>
                    <div class="kanban__item" draggable="true" data-id="<%=t._id%>">
                        <div class="kanban__item-input" contenteditable=""><%= t.description %></div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% }) %>
            </div>
            <button class="kanban__add-item" type="button" id="kanban__add__not__started">+ Add</button>
        </div>
        <!-- Column in progress tasks -->
        <div class="kanban__column" id="kanban__column__in__progress">
            <div class="kanban__column-title">In Progress</div>
            <div class="kanban__column-items">
                <div class="kanban__dropzone"></div>
                <% tasksInProgress.forEach(t => { %>
                    <div class="kanban__item" draggable="true" data-id="<%=t._id %>">
                        <div class="kanban__item-input" contenteditable=""><%= t.description %></div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% }) %>
            </div>
            <button class="kanban__add-item" type="button" id="kanban__add__in__progress">+ Add</button>
        </div>
        <!-- Column completed tasks -->
        <div class="kanban__column" id="kanban__column__completed">
            <div class="kanban__column-title">Completed</div>
            <div class="kanban__column-items">
                <div class="kanban__dropzone"></div>
                <% tasksCompleted.forEach(t => { %>
                    <div class="kanban__item" draggable="true" data-id="<%=t._id%>">
                        <div class="kanban__item-input" contenteditable=""><%= t.description %></div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% }) %>
            </div>
            <button class="kanban__add-item" type="button" id="kanban__add__completed">+ Add</button>
        </div>
        <!-- Column on hold tasks -->
        <div class="kanban__column" id="kanban__column__on__hold">
            <div class="kanban__column-title">On Hold</div>
            <div class="kanban__column-items">
                <div class="kanban__dropzone"></div>
                <% tasksOnHold.forEach(t => { %>
                    <div class="kanban__item" draggable="true" data-id="<%=t._id%>">
                        <div class="kanban__item-input" contenteditable=""><%= t.description %></div>
                        <div class="kanban__dropzone"></div>
                    </div>
                <% }) %>
            </div>
            <button class="kanban__add-item" type="button" id="kanban__add__on__hold">+ Add</button>
        </div>
    </div>
    <script src="js/main.js" type="module"></script>
</body>
</html>